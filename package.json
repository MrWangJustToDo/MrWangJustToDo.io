{
  "name": "blog",
  "packageManager": "pnpm@7.5.0",
  "scripts": {
    "dev": "node ./dev.js",
    "dev:app": "cd app && pnpm dev",
    "dev:packages": "ts-node ./scripts/rollupWatch.ts watch",
    "export": "cd app && pnpm export",
    "build": "pnpm generate && pnpm build:packages && pnpm build:app",
    "build:app": "cd app && pnpm build",
    "build:packages": "ts-node ./scripts/rollupBuild.ts build",
    "start": "cd app && pnpm start",
    "theme": "chakra-cli tokens ./app/src/theme/index.ts",
    "generate": "graphql-codegen --config packages/graphql/codegen.yaml",
    "test": "jest",
    "lint": "pnpm -p -r -c exec eslint src",
    "prettier": "prettier --ignore-path .prettierignore --write .",
    "fix": "pnpm -p -r -c exec eslint --fix src",
    "ts-check": "pnpm -s -p -r -c exec tsc --noEmit",
    "clean": "pnpm -p -r -c exec rm -rf dist",
    "purge": "pnpm -p -r -c exec rm -rf node_modules",
    "prepare": "husky install & pnpm clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix"
  },
  "devDependencies": {
    "@apollo/client": "^3.8.1",
    "@babel/core": "^7.22.10",
    "@chakra-ui/cli": "^2.4.1",
    "@chakra-ui/react": "^2.7.0",
    "@chakra-ui/styled-system": "^2.9.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@graphql-codegen/add": "^5.0.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/import-types-preset": "^2.2.6",
    "@graphql-codegen/near-operation-file-preset": "^2.5.0",
    "@graphql-codegen/typed-document-node": "^5.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@swc/core": "^1.3.76",
    "@types/jest": "^29.2.2",
    "@types/lodash": "^4.14.197",
    "@types/node": "^18.15.11",
    "@types/react": "18.2.20",
    "eslint": "^8.47.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-node": "^11.1.0",
    "framer-motion": "^6.5.1",
    "graphql": "^16.8.0",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "lint-staged": "^14.0.0",
    "lodash": "^4.17.21",
    "prettier": "^3.0.2",
    "project-tool": "git+ssh://git@github.com:MrWangJustToDo/project-tool.git",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">= 16.14.0",
    "pnpm": ">= 7.5.0"
  }
}
