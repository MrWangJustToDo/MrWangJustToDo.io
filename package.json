{
  "name": "blog",
  "packageManager": "pnpm@7.5.0",
  "scripts": {
    "dev": "node ./dev.js",
    "dev:app": "cd app && pnpm dev",
    "dev:packages": "ts-node ./scripts/rollupWatch.ts watch",
    "export": "cd app && pnpm export",
    "build": "pnpm generate && pnpm build:packages && pnpm build:app",
    "build:app": "cd app && pnpm build",
    "build:packages": "ts-node ./scripts/rollupBuild.ts build",
    "theme": "chakra-cli tokens ./app/src/theme/index.ts",
    "generate": "graphql-codegen --config packages/graphql/codegen.yaml",
    "test": "jest",
    "lint": "pnpm -p -r -c exec eslint src",
    "prettier": "prettier --ignore-path .prettierignore --write .",
    "fix": "pnpm -p -r -c exec eslint --fix src",
    "ts-check": "pnpm -s -p -r -c exec tsc --noEmit",
    "clean": "pnpm -p -r -c exec rm -rf dist",
    "purge": "pnpm -p -r -c exec rm -rf node_modules",
    "prepare": "husky install & pnpm clean"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix"
  },
  "devDependencies": {
    "@apollo/client": "^3.6.9",
    "@babel/core": "^7.19.1",
    "@chakra-ui/cli": "^2.1.8",
    "@chakra-ui/react": "^2.3.4",
    "@chakra-ui/styled-system": "^2.3.3",
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@graphql-codegen/add": "^3.2.1",
    "@graphql-codegen/cli": "^2.12.2",
    "@graphql-codegen/import-types-preset": "^2.2.3",
    "@graphql-codegen/near-operation-file-preset": "^2.4.1",
    "@graphql-codegen/typed-document-node": "^2.3.3",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-operations": "^2.5.3",
    "@graphql-typed-document-node/core": "^3.1.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@swc/core": "^1.3.3",
    "@types/jest": "^29.0.3",
    "@types/lodash": "^4.14.185",
    "@types/node": "^18.7.23",
    "@types/react": "18.0.21",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "axios": "^0.27.2",
    "esbuild": "^0.15.9",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "framer-motion": "^6.5.1",
    "graphql": "^16.6.0",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "prettier": "^2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rollup": "^2.79.0",
    "rollup-plugin-typescript2": "^0.34.0",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">= 16.14.0",
    "pnpm": ">= 7.5.0"
  }
}
