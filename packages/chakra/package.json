{
  "name": "@blog/chakra",
  "description": "@blog/chakra",
  "version": "0.0.1",
  "main": "index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "index.js"
  ],
  "exports": {
    ".": {
      "require": "./index.js",
      "import": "./dist/esm/index.js",
      "default": "./index.js"
    }
  },
  "buildOptions": {
    "input": "./src/index.ts",
    "output": [
      {
        "dir": "./dist",
        "entryFileNames": "cjs/index.js",
        "multiple": true,
        "format": "cjs",
        "sourcemap": true
      },
      {
        "dir": "./dist",
        "entryFileNames": "esm/index.js",
        "format": "esm",
        "sourcemap": true
      }
    ]
  },
  "peerDependencies": {
    "@chakra-ui/react": ">=2.2",
    "react": ">=16.8"
  }
}
