{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "ESNEXT",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/src/*"]
    }
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "**/*.spec.tsx", "**/*.test.tsx"]
}
